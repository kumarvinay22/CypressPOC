{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "cypress", "@cucumber/cucumber"]
  },
  "include": [
    "src/**/*",
    "features/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}
